{
  "name": "crlp",
  "displayName": "crlp",
  "description": "ide for legislation drafting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:l4",
    "onCommand:nlg-preview.showPreview",
    "onCommand:crlp.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "crlp.cabalProjectPath": {
          "type": "string",
          "default": "",
          "description": "Path to the lam4 cabal project directory"
        }
      }
    },
    "languages": [
      {
        "id": "l4",
        "aliases": [
          "L4",
          "l4"
        ],
        "extensions": [
          ".l4"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "l4",
        "scopeName": "source.l4",
        "path": "./l4.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "crlp.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "nlg-preview.showPreview",
        "title": "Display Natural Language Preview"
      }
    ],
    "colors": [
      {
        "id": "l4.booleanOperators",
        "description": "colour for bool operators in L4",
        "defaults": {
          "dark": "#5eb7ff",
          "light": "#0000FF"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "chokidar": "^4.0.1",
    "cors": "^2.8.5",
    "eslint": "^9.11.1",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "typescript": "^5.6.2"
  }
}
