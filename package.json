{
  "name": "crlp",
  "displayName": "crlp",
  "description": "ide for legislation drafting",
  "version": "0.0.1",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/viz.js",
  "contributes": {
    "commands": [
      {
        "command": "viz.showViz",
        "title": "Show Visualisation"
      },
      {
        "command": "nlg-preview.showPreview",
        "title": "Display Natural Language Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "tsc",
    "start": "node ./out/viz.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "babel-loader": "^9.2.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "ladder-diagram": "^2.0.3"
  }
}
